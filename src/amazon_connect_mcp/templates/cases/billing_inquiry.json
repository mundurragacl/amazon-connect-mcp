{
  "name": "Billing Inquiry",
  "description": "Template for billing and payment related cases",
  "status": "Active",
  "requiredFields": [
    {"fieldId": "title"},
    {"fieldId": "status"},
    {"fieldId": "billing_issue_type"}
  ],
  "layout": {
    "topPanel": [
      {"fieldId": "title", "label": "Case Title"},
      {"fieldId": "status", "label": "Status"},
      {"fieldId": "billing_issue_type", "label": "Issue Type"},
      {"fieldId": "account_number", "label": "Account Number"}
    ],
    "moreInfo": [
      {"fieldId": "invoice_number", "label": "Invoice Number"},
      {"fieldId": "amount_disputed", "label": "Amount Disputed"},
      {"fieldId": "billing_period", "label": "Billing Period"},
      {"fieldId": "description", "label": "Description"},
      {"fieldId": "refund_requested", "label": "Refund Requested"},
      {"fieldId": "refund_amount", "label": "Refund Amount"},
      {"fieldId": "resolution_notes", "label": "Resolution Notes"}
    ]
  },
  "fields": {
    "title": {"type": "Text", "required": true, "maxLength": 200},
    "status": {"type": "SingleSelect", "required": true, "options": ["Open", "Under Review", "Pending Approval", "Approved", "Denied", "Closed"]},
    "billing_issue_type": {"type": "SingleSelect", "required": true, "options": ["Incorrect Charge", "Missing Payment", "Refund Request", "Payment Plan", "Invoice Question", "Other"]},
    "account_number": {"type": "Text", "maxLength": 50},
    "invoice_number": {"type": "Text", "maxLength": 50},
    "amount_disputed": {"type": "Number"},
    "billing_period": {"type": "Text", "maxLength": 50},
    "description": {"type": "Text", "multiline": true, "maxLength": 5000},
    "refund_requested": {"type": "Boolean", "default": false},
    "refund_amount": {"type": "Number"},
    "resolution_notes": {"type": "Text", "multiline": true, "maxLength": 5000}
  },
  "conditions": [
    {
      "type": "conditionallyRequired",
      "targetField": "refund_amount",
      "condition": {"field": "refund_requested", "equals": true}
    }
  ]
}

{
  "name": "Utilities Support Layout",
  "description": "Layout for utilities cases with service address and account details",
  "_note": "Title and Status fields cannot be part of layouts - they are always displayed automatically",
  "content": {
    "basic": {
      "topPanel": {
        "sections": [
          {
            "fieldGroup": {
              "name": "Account Overview",
              "fields": [
                {"id": "case_reason"},
                {"id": "account_number"},
                {"id": "customer_id"}
              ]
            }
          }
        ]
      },
      "moreInfo": {
        "sections": [
          {
            "fieldGroup": {
              "name": "Service Details",
              "fields": [
                {"id": "service_address"},
                {"id": "summary"}
              ]
            }
          }
        ]
      }
    }
  },
  "requiredCustomFields": [
    {"name": "Account Number", "type": "Text"},
    {"name": "Service Address", "type": "Text"},
    {"name": "Resolution Notes", "type": "Text"}
  ]
}

      "description": "Initial claims reporting and documentation workflow",
      "steps": [
        {
          "id": "claim_initiation",
          "title": "Initiate Claim Report",
          "description": "Begin the claims reporting process",
          "actions": [
            "Verify policyholder identity",
            "Confirm policy is active and in good standing",
            "Obtain basic incident information",
            "Assign claim number and create file"
          ],
          "validation": "Claim initiated with valid policy",
          "nextStep": "incident_details"
        },
        {
          "id": "incident_details",
          "title": "Gather Incident Details",
          "description": "Collect comprehensive incident information",
          "actions": [

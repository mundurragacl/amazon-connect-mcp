      "name": "New Account Opening Process",
      "description": "Complete workflow for opening new customer accounts",
      "steps": [
        {
          "id": "customer_identification",
          "title": "Customer Identification & Verification",
          "description": "Verify customer identity per KYC requirements",
          "actions": [
            "Collect full legal name and date of birth",
            "Request government-issued photo ID",
            "Verify Social Security Number",
            "Confirm current address with documentation",
            "Check against OFAC and sanctions lists"
          ],
          "validation": "Identity verified and compliance checks passed",
          "nextStep": "account_selection"
        },
        {
          "id": "account_selection",
          "title": "Account Type Selection",
          "description": "Help customer choose appropriate account type",
          "actions": [
            "Review customer banking needs",
            "Explain available account options",
            "Compare fees and features",
            "Recommend suitable account type"
          ],
          "validation": "Account type selected",
          "nextStep": "application_completion"
        },
        {
          "id": "application_completion",
          "title": "Complete Application",
          "description": "Fill out account application with customer",
          "actions": [
            "Complete application form",
            "Review terms and conditions",
            "Obtain required signatures",
            "Process initial deposit"
          ],
          "validation": "Application completed and signed",
          "nextStep": "account_setup"
        },
        {
          "id": "account_setup",
          "title": "Account Setup & Services",
          "description": "Set up account and additional services",
          "actions": [
            "Create account in system",
            "Set up online banking access",
            "Order debit card if requested",
            "Explain account features and services"
          ],
          "validation": "Account active and services configured",
          "nextStep": "completion"
        }
      ]
    },
    "fraud_investigation": {
      "name": "Fraud Investigation Process",
      "description": "Handle suspected fraudulent activity on accounts",
      "steps": [
        {
          "id": "fraud_verification",
          "title": "Verify Fraud Report",
          "description": "Confirm fraudulent activity with customer",
          "actions": [
            "Review disputed transactions with customer",
            "Verify customer identity thoroughly",
            "Document fraud details and timeline",
            "Assess potential security compromises"
          ],
          "validation": "Fraud confirmed and documented",
          "nextStep": "account_security"
        },
        {
          "id": "account_security",
          "title": "Secure Customer Account",
          "description": "Implement immediate security measures",
          "actions": [
            "Place fraud alert on account",
            "Block compromised cards immediately",
            "Reset online banking credentials",
            "Review and update security settings"
          ],
          "validation": "Account secured from further fraud",
          "nextStep": "investigation_initiation"
        },
        {
          "id": "investigation_initiation",
          "title": "Initiate Fraud Investigation",
          "description": "Start formal investigation process",
          "actions": [
            "Create fraud case in system",
            "Gather supporting documentation",
            "Submit to fraud investigation team",
            "Provide case number to customer"
          ],
          "validation": "Investigation case created",
          "nextStep": "customer_communication"
        },
        {
          "id": "customer_communication",
          "title": "Customer Communication & Follow-up",
          "description": "Keep customer informed of process",
          "actions": [
            "Explain investigation timeline",
            "Provide temporary credit if applicable",
            "Schedule follow-up contact",
            "Send confirmation documentation"
          ],
          "validation": "Customer informed and documentation sent",
          "nextStep": "completion"
        }
      ]
    },

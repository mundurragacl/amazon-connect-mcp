{
  "name": "Service Level Agreements",
  "description": "SLA configuration for different customer tiers and service types",
  "attributes": [
    {"name": "tier_name", "type": "text", "isPrimaryKey": true, "description": "Customer tier or segment name"},
    {"name": "max_wait_time_seconds", "type": "number", "required": true, "description": "Maximum queue wait time in seconds"},
    {"name": "callback_threshold_seconds", "type": "number", "description": "Wait time before offering callback"},
    {"name": "priority_score", "type": "number", "required": true, "description": "Routing priority (higher = more priority)"},
    {"name": "dedicated_queue", "type": "text", "description": "Dedicated queue for this tier"},
    {"name": "escalation_time_minutes", "type": "number", "description": "Time before auto-escalation"},
    {"name": "after_hours_routing", "type": "text", "description": "After-hours handling: voicemail, callback, emergency"},
    {"name": "custom_greeting", "type": "text", "description": "Custom IVR greeting for this tier"}
  ],

{
  "name": "Skill-Based Routing Rules",
  "description": "Routing rules based on contact reason and required agent skills",
  "attributes": [
    {"name": "contact_reason", "type": "text", "isPrimaryKey": true, "description": "Contact reason or intent"},
    {"name": "required_skill", "type": "text", "required": true, "description": "Primary skill required"},
    {"name": "secondary_skill", "type": "text", "description": "Secondary/backup skill"},
    {"name": "target_queue", "type": "text", "required": true, "description": "Target queue name"},
    {"name": "overflow_queue", "type": "text", "description": "Overflow queue if primary unavailable"},
    {"name": "min_proficiency", "type": "number", "description": "Minimum skill proficiency (1-5)"},
    {"name": "priority_boost", "type": "number", "default": 0, "description": "Additional priority for this reason"},
    {"name": "estimated_handle_time", "type": "number", "description": "Expected handle time in seconds"},
    {"name": "self_service_eligible", "type": "boolean", "default": false, "description": "Can be handled by self-service"}
  ],
